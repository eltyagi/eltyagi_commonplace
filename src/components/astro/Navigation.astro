---
interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

const tabs = [
  { path: '/', label: 'Home', isIcon: true },
  { path: '/thoughts', label: 'Thoughts' },
  { path: '/meditations', label: 'Meditations' },
  { path: '/contact', label: 'Say hi?' },
];
---

<nav class="navigation">
  {tabs.map((tab) => (
    <a
      href={tab.path}
      class={`nav-tab ${currentPath === tab.path ? 'active' : ''}`}
    >
      {tab.isIcon ? (
        <svg class="nav-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
        </svg>
      ) : (
        tab.label
      )}
    </a>
  ))}
</nav>

<style>
.navigation {
  position: fixed;
  bottom: 24px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 16px;
  padding: 0 5px;
  background-color: #252525;
  border-radius: 80px;
  box-shadow: 0px 12px 20px 0px rgba(0, 0, 0, 0.2);
  height: 48px;
  z-index: 1000;
}

.nav-tab {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  gap: 4px;
  padding: 12px 16px;
  height: 40px;
  background: transparent;
  border: none;
  border-radius: 48px;
  font-family: "Fira Code", monospace;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4em;
  letter-spacing: -0.01em;
  color: #FFE0DC;
  cursor: pointer;
  transition: background-color 0.3s ease;
  white-space: nowrap;
  text-decoration: none;
}

.nav-tab:hover {
  background-color: rgba(255, 224, 220, 0.1);
}

.nav-tab.active {
  background-color: #FFE0DC;
  color: #FF6F61;
}

.nav-icon {
  width: 24px;
  height: 24px;
  display: block;
}

@media (max-width: 768px) {
  .navigation {
    bottom: 16px;
    gap: 8px;
    height: 44px;
    border-radius: 60px;
    padding: 0 4px;
  }
  
  .nav-tab {
    padding: 10px 12px;
    font-size: 16px;
    height: 36px;
  }
  
  .nav-icon {
    width: 20px;
    height: 20px;
  }
}

@media (max-width: 480px) {
  .navigation {
    bottom: 10px;
    gap: 4px;
    height: 38px;
    padding: 0 3px;
  }
  
  .nav-tab {
    padding: 7px 9px;
    font-size: 13px;
    height: 34px;
  }
  
  .nav-icon {
    width: 16px;
    height: 16px;
  }
}
</style>
