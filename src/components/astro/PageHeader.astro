---
interface Props {
  subtitle: string;
}

const { subtitle } = Astro.props;
---

<div class="page-header">
  <div class="pg-title">
    <div class="pg-title-name krona-one-regular">eltyagi's</div>
    <div class="pg-title-icon">
      <img class="pg-title-icon-img" src="/music-luxe.svg" alt="Logo" />
    </div>
    <div class="pg-title-subtitle krona-one-regular">{subtitle}</div>
  </div>
</div>

<style>
.page-header {
  width: 100%;
  height: 220px;
  background-color: #F9F6EE;
  z-index: 100;
  position: fixed;
  top: 0;
}

.pg-title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  top: 58px;
  padding: 0px;
  gap: clamp(6px, 1.5vw, 20px);
  left: 97px;
  right: 97px;
  position: absolute;
  width: calc(100vw - 194px);
  flex-wrap: nowrap;
}

.pg-title-icon {
  display: flex;
  align-items: center;
  margin: 0 9px;
}

.pg-title-icon-img {
  width: 164px;
  height: 164px;
  max-width: 164px;
  max-height: 164px;
  flex-shrink: 0;
  transition: transform 0.6s ease-in-out;
  transform-style: preserve-3d;
  cursor: pointer;
}

.pg-title-icon-img:hover {
  transform: rotateY(360deg);
}

.pg-title-name {
  font-size: 68px;
  line-height: 1.25em;
  color: #252525;
  max-width: 392px;
  padding: 0;
  text-align: left;
  flex: 0 0 auto;
}

.pg-title-subtitle {
  font-size: 68px;
  line-height: 1.25em;
  color: #252525;
  max-width: 665px;
  padding: 0;
  text-align: left;
  flex: 1 1 auto;
}

@media (max-width: 768px) {
  .page-header {
    height: 100px !important;
  }

  .pg-title {
    justify-content: flex-start !important;
    top: 20px !important;
    gap: 6px !important;
    left: 18px !important;
    width: calc(100vw - 36px) !important;
  }

  .pg-title-icon-img {
    width: 60px !important;
    height: 60px !important;
  }

  .pg-title-name {
    font-size: 24px !important;
    width: auto !important;
    flex: 0 0 auto !important;
  }

  .pg-title-subtitle {
    font-size: 24px !important;
    width: auto !important;
    flex: 1 !important;
  }
}

@media (max-width: 480px) {
  .page-header {
    height: 80px !important;
  }

  .pg-title {
    justify-content: flex-start !important;
    top: 15px !important;
    gap: 4px !important;
    left: 12px !important;
    width: calc(100vw - 24px) !important;
  }

  .pg-title-icon-img {
    width: 47px !important;
    height: 47px !important;
  }

  .pg-title-name {
    font-size: 19px !important;
    width: auto !important;
    flex: 0 0 auto !important;
  }

  .pg-title-subtitle {
    font-size: 19px !important;
    width: auto !important;
    flex: 1 !important;
  }
}
</style>
